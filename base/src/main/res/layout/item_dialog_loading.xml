<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/item_dialog_loading_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:minWidth="80dp"
        android:minHeight="80dp"
        android:background="@drawable/loading_toast">

        <ProgressBar
            android:id="@+id/item_dialog_loading_pb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/loading_progressbar"
            android:indeterminateOnly="true"/>

        <TextView
            android:id="@+id/item_dialog_loading_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/bg_f0f0f0"
            android:textSize="15sp"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>